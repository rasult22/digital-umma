---
import "@fontsource-variable/inter";
import "@fontsource-variable/raleway";

import About from "~/components/about.astro";
import Sponsors from "~/components/sponsors.astro";
import Program from '~/components/program.astro'
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import Intro from "~/components/intro.astro";
import Part from "~/components/part.astro";
import Expectation from "~/components/expectation.astro";
import Sadaqa from "~/components/sadaqa.astro";
import Speakers from "~/components/speakers.astro";
import Location from "~/components/location.astro";
import Organizator from '~/components/organizator.astro'
import Contacts from "~/components/contacts.astro";
import "~/styles/index.css";

const { generator, site } = Astro;
const image = new URL("social.webp", site);
const description =
  "Build fast websites, faster. Astro is a new kind of site builder for the modern web. Lightning-fast performance meets powerful developer experience.";
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <title>Digital Umma IT Forum</title>
    <meta name="description" content="Digital Umma IT Forum - это не только форум, это движение, объединяющее передовые IT-решения с исламскими ценностями." />

    <!-- social media -->
    <meta property="og:title" content="Digital Umma IT Forum" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="Digital Umma IT Forum - это не только форум, это движение, объединяющее передовые IT-решения с исламскими ценностями." />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
  <!-- Meta Pixel Code -->
  <script>
    !function(f,b,e,v,n,t,s)
    {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
    n.callMethod.apply(n,arguments):n.queue.push(arguments)};
    if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
    n.queue=[];t=b.createElement(e);t.async=!0;
    t.src=v;s=b.getElementsByTagName(e)[0];
    s.parentNode.insertBefore(t,s)}(window, document,'script',
    'https://connect.facebook.net/en_US/fbevents.js');
    fbq('init', '796870905611230');
    fbq('track', 'PageView');
    </script>
    <noscript><img height="1" width="1" style="display:none"
    src="https://www.facebook.com/tr?id=796870905611230&ev=PageView&noscript=1"
    /></noscript>
    <!-- End Meta Pixel Code -->
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />
    <Intro />
    <Sponsors />
    <About />
    <Expectation />
    <Speakers />
    <Organizator />
    <Program />
    <Part />
    <Location />
    <Sadaqa />
    <Contacts />
    <Footer />
  </body>
</html>

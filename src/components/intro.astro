---
import { Icon } from "astro-icon/components";
import UIBtn from "./ui-btn.astro";
---
<div id="main" class="relative py-[204px]">
  <div class="bg-[rgba(0,0,0,0.5)]">
    <div class="relative z-[5]">
      <div class="relative max-w-[1280px] mx-auto">
        <div class="relative flex items-center space-x-5 text-[30px] font-medium">
          <span>17 Февраля, 2024</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 10 10" fill="none">
            <circle cx="5" cy="5" r="5" fill="#D9D9D9"/>
          </svg>
          <span>11:00 (UTC 6+)</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 10 10" fill="none">
            <circle cx="5" cy="5" r="5" fill="#D9D9D9"/>
          </svg>
          <span>Алматы, Казахстан</span>
        </div>
        <div class="mt-[26px] font-railway text-[88px] leading-[100px] uppercase font-extrabold max-w-[700px]">
          Digital Umma IT Forum
        </div>
        <div class="mt-[36px] font-railway">
          Соединяя IT и Исламские Ценности
        </div>
        <div class="mt-[36px] space-x-4">
          <UIBtn type="primary">Принять участие</UIBtn>
          <UIBtn title="Набор завершен" disabled={true}>Стать спикером</UIBtn>
        </div>
      </div>
    </div>
  </div>
  <img class="w-[617px] absolute top-0 left-0" src="/main-bg-2.png" alt="">
  <img class="z-[2] w-[743px] absolute bottom-0 right-0" src="/main-bg-1.png" alt="">
</div>
